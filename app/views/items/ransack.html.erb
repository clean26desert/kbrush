<h2>items.ransack.html.erb</h2>

 <h3>検索したい商品の条件を入力してください。</h3>
<%= search_form_for(@q, url: ransack_result_path) do |f|%>
	<%= f.text_field :item_name_cont,  class: "form-control" %>
	<%= f.check_box :item_limited_size_b4_eq, {}, checked_value = "true", unchecked_value = "" %>B4
	<%= f.check_box :item_limited_size_a4_eq, {}, checked_value = "true", unchecked_value = "" %>A4
	<%= f.submit "検索", class:"btn btn-outline-success" %>
<% end %>
