<h2>items.index.html.erb</h2>
<% @items.each do |item| %>
	<p>商品名:<%= link_to item_path(item.id) do %><%= item.item_name %><% end %></p>
	<p>商品画像:<%= link_to item_path(item.id) do %><%= attachment_image_tag item, :item_img, :fill, 100, 100 %><% end %></p>
	<p>添削条件設定</p>
	<p>画像サイズ</p>
	<p>B4:<% if item.item_limited_size_b4 == true %>○<% else %>×<% end %>A4:<% if item.item_limited_size_a4 == true %>○<% else %>×<% end %></p>
	<p>ユーザー画像:<%= link_to user_path(item.user.id) do %><%= attachment_image_tag item.user, :user_img, :fill, 50, 50, fallback: "no_image.png" %><% end %></p>
	<p>ユーザーネーム:<%= link_to user_path(item.user.id) do %><%= item.user.user_handle_name %><% end %></p>
<% end %>
